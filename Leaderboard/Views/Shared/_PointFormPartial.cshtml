@model PointFormViewModel

<div class="row">
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
		<form method="post">
			<div class="mb-3">
				<label asp-for="@Model.Points" class="form-label-add-edit"></label>
				<input asp-for="@Model.Points" type="number" class="form-control" aria-required="true" rows="5" />
				<span asp-validation-for="@Model.Points" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="@Model.Description" class="form-label-add-edit"></label>
				<input asp-for="@Model.Description" class="form-control" aria-required="true" />
				<span asp-validation-for="@Model.Description" class="text-danger"></span>
			</div>
			<input type="hidden" asp-for="@Model.TeamName" />
			<div class="mb-3">
				<input class="btn btn-warning mb-2 w-100 p-3 fw-bold" type="submit" value="Save" />
			</div>
		</form>
	</div>
</div>
