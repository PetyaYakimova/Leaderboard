@model TeamResultTableViewModel

<tr>
	<td>@Model.Name</td>
	<td>
		@if (Model.IsActive)
		{
			<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="green" viewBox="0 0 24 24">
				<path d="M20.285 2l-11.285 11.567-5.286-5.011-3.714 3.716 9 8.728 15-15.285z" />
			</svg>

		}
		else
		{
			<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" stroke-miterlimit="2" fill="red" viewBox="0 0 24 24">
				<path d="m12 10.93 5.719-5.72c.146-.146.339-.219.531-.219.404 0 .75.324.75.749 0 .193-.073.385-.219.532l-5.72 5.719 5.719 5.719c.147.147.22.339.22.531 0 .427-.349.75-.75.75-.192 0-.385-.073-.531-.219l-5.719-5.719-5.719 5.719c-.146.146-.339.219-.531.219-.401 0-.75-.323-.75-.75 0-.192.073-.384.22-.531l5.719-5.719-5.72-5.719c-.146-.147-.219-.339-.219-.532 0-.425.346-.749.75-.749.192 0 .385.073.531.219z" />
			</svg>
		}
	</td>
	<td>@Model.TotalPoints</td>
	<td>
		<form method="get">
			<input type="submit" asp-action="AddPoints" asp-route-id="@Model.Id" value="Add Points" class="link-success custominputlink" />
		</form>
	</td>
	<td>
		<form method="get">
			<input type="submit" asp-action="ViewPointsHistory" asp-route-id="@Model.Id" value="View Points History" class="link-info custominputlink" />
		</form>
	</td>
	<td>
		<form method="get">
			<input type="submit" asp-action="EditTeam" asp-route-id="@Model.Id" value="Edit" class="link-warning custominputlink" />
		</form>
	</td>
	<td>
		<form method="post">
			@if (Model.IsActive)
			{
				<input type="submit" asp-action="ChangeStatusTeam" asp-route-id="@Model.Id" value="Deactivate" class="link-danger custominputlink" />
			}
			else
			{
				<input type="submit" asp-action="ChangeStatusTeam" asp-route-id="@Model.Id" value="Activate" class="link-success custominputlink" />
			}
		</form>
	</td>
	<td>
		<form method="get">
			<input type="submit" asp-action="DeleteTeam" asp-route-id="@Model.Id" value="Delete" class="link-danger custominputlink" />
		</form>
	</td>
</tr>
